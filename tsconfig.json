{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    // âœ… TypeScript 6+ style path alias (no deprecated baseUrl)
    "paths": {
      "~/*": ["./src/*"]
    },

    // type roots
    "types": ["react", "react-native"]
  },
  "include": ["./**/*.ts", "./**/*.tsx", "expo.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "eas.json",
    ".expo"
  ]
}
